{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block body %}
<table>
    <thead>
        <tr>
            <th>id</th>
            <th>nom</th>
            <th>département</th>
            <th>action</th>
        </tr>
    </thead>
    <tbody>
        {% for v in villes %}
            <tr>
                <td>{{ v.id }}</td>
                <td>{{ v.nom }}</td>
                <td>{{ v.departement.nom }}</td>
                <td>
                    <a href="{{ path("detailVille", {id:v.id})}}">Voir</a>
                    <a href="{{ path("deleteVille", {id:v.id})}}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% if page %}
    <div class="pagination">
        {% if page > 1 %}
            <a href="{{ path("readVille", {nb:nombre, page: page - 1})}}">Précédent</a> | 
        {% endif %}
        {% for i in range(1, nbPage) %}
            <a href="{{ path("readVille", {nb:nombre, page: i})}}">{{i}}</a> |
        {% endfor %}
        {% if page < nbPage %}
            <a href="{{ path("readVille", {nb:nombre, page: page + 1})}}">suivant</a>
        {% endif %}
    </div>
{% endif %}

{% endblock %}
