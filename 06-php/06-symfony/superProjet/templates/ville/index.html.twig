{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block body %}
<table>
    <thead>
        <tr>
            <th>id</th>
            <th>nom</th>
            <th>action</th>
        </tr>
    </thead>
    <tbody>
        {% for v in villes %}
            <tr>
                <td>{{ v.id }}</td>
                <td>{{ v.nom }}</td>
                <td><a href="{{ path("detailVille", {id:v.id})}}">Voir</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
